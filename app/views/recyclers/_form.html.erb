<%= form_with(model: @recycler, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, "Nombre del Reciclador" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :phone, "Número Telefónico" %>
    <%= form.text_field :phone, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :address, "Dirección" %>
    <%= form.text_field :address, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>

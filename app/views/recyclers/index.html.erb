<h1>Recicladores</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Teléfono</th>
      <th>Dirección</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @recyclers.each do |recycler| %>
      <tr>
        <td><%= recycler.name %></td>
        <td><%= recycler.phone %></td>
        <td><%= recycler.address %></td>
        <td><%= recycler.email %></td>
        <td>
          <%= link_to "Entregas", deliveries_recycler_path(recycler), class: "btn btn-primary btn-sm" %>
          <%= link_to "Ver", recycler_path(recycler), class: "btn btn-info btn-sm" %>
          <%= link_to "Materiales", recycler_materials_path(recycler), class: "btn btn-secondary btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @recyclers %>
<%= link_to "Nuevo Reciclador", new_recycler_path, class: "btn btn-success" %>

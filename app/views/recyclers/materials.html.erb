      <th>Material</th>
      <th>Descripci√≥n</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.description %></td>

<h1>Registrar Entrega</h1>
<%= form_with(model: @delivery, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :material_id, "Material Entregado" %>
    <%= form.collection_select :material_id, @materials, :id, :name, { prompt: "Seleccione un material" }, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :date, "Fecha de la Entrega" %>
    <%= form.date_field :date, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, "Cantidad Entregada (kg)" %>
    <%= form.number_field :quantity, class: "form-control", step: 0.01, required: true %>
  </div>

  <%= form.submit "Registrar", class: "btn btn-primary" %>
<% end %>
<%= link_to "Volver", recyclers_path, class: "btn btn-secondary" %>
